void sort(int in[], int n){

for ( int i=0; i < n-1; i++){                         // Для очередного i

              for ( int j=i+1, k=i; j<n; j++)      // k - индекс минимального

              if (in[j] < in[k]) k=j;                                // в диапазоне i..n-1

              int c=in[k]; in[k] = in[i]; in[i] = c;            // Три стакана для очередного

              }}     
